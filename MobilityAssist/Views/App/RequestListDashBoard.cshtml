@{
    ViewBag.Title = "RequestListDashBoard";
}

<h2>Ваші запити</h2>
@using (Html.BeginForm())
{
    <p>
        Знайти за Адресою: @Html.TextBox("SearchString")
        <input type="submit" value="Пошук" />
    </p>
}
<table class="table">
    <thead class="thead-dark">
        <tr>
            @*<th scope="col">ID</th>*@
            <th scope="col">Початок</th>
            <th scope="col">Призначення</th>
            @*<th scope="col">Необхідна допомога</th>
                <th scope="col">Дата запиту</th>
                <th scope="col">Відстань</th>
                <th scope="col">Статус</th>*@
            <th>
                @Html.ActionLink("Необхідна допомога", "RequestListDashBoard", new { sortOrder = ViewBag.HelpSortParm })
            </th>
            <th>
                @Html.ActionLink("Дата запиту", "RequestListDashBoard", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                @Html.ActionLink("Відстань", "RequestListDashBoard", new { sortOrder = ViewBag.DistSortParm })
            </th>
            <th>
                @Html.ActionLink("Статус", "RequestListDashBoard", new { sortOrder = ViewBag.StateSortParm })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in @ViewData["requestquery"] as IEnumerable
        <MobilityAssist.Models.GetRequests_Result>
            )
        {
            <tr>
                @*<td>
                        @req.request_id
                    </td>*@
                <td>
                    @req.start_street_name, @req.start_address_numb
                </td>
                <td>
                    @if (@req.destination_street_name != null && @req.destination_address_numb != null)
                    {
                        <p>@req.destination_street_name, @req.destination_address_numb</p>
                    }

                </td>
                <td style="font-weight:bolder">
                    @req.help_name
                </td>
                <td>
                    @{
                        string formattedDifference = req.req_date.ToString("HH:mm, dd/MM/yyyy");
                    }

                    @formattedDifference

                </td>
                <td>
                    @if (req.distance != null)
                    {
                        <p>@req.distance km</p>
                    }
                </td>
                <td>
                    @if (req.req_status == false)
                    {
                        <p style="font-weight:bold; color:darkred">Відкритий</p>
                    }
                    else
                    {
                        <p style="font-weight:bold; color:forestgreen">Закритий</p>
                    }

                </td>
                <td>
                    <a href="@Url.Action("DeleteRequest", "App", new { request_id = req.request_id })" class="btn btn-danger">Завершити</a>
                </td>
            </tr>
        }
    <tbody>
</table>
<a type="button" href="@Url.Action("UserDashBoard", "App")" class="btn btn-light">Повернутись</a>